<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgrd2"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/touxiang" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="411dp"
        android:layout_height="19dp"
        android:background="#9A99A7" />

    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="392dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#514F73"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/age"
        android:layout_width="392dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#4F4F73"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/study"
        android:layout_width="393dp"
        android:layout_height="56dp"
        android:text="TextView"
        android:textColor="#4F4F73"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/game"
        android:layout_width="390dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#4F4F73"
        android:textSize="40sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="#9A99A7" />

    <Button
        android:id="@+id/refrash"
        android:layout_width="109dp"
        android:layout_height="57dp"
        android:background="#02233988"
        android:text="刷新"
        android:textColor="#EC0B7B"
        android:textSize="30sp" />

</LinearLayout>